generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  role      role       @default(USER)
  Playlists Playlist[]
}

enum role {
  USER
  ADMIN
}

model Playlist {
  id      Int      @id @default(autoincrement())
  name    String
  genre   String
  musics  String[]
  user_id Int
  user    User     @relation(fields: [user_id], references: [id])
}
